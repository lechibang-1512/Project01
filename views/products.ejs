<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="menu-container">
      <button class="hamburger" onclick="toggleMenu()">â˜°</button> 
      <nav id="menu" class="hidden">
      <a href="/products">Products</a>
      <a href="/contactUs">Contact Us</a>
      <a href="/purchaseHistory">Purchase History</a>
      <a href="/customerInfo">Customer Info</a>
    </nav>
  </div>

    <div class="container">
        <h1 class="text-center">All Products</h1>
        <div class="product-container">
            <% products.forEach(function(product) { %>
                <div class="product-card">
                    <h2 class="product-name"><%= product.sm_name %></h2>
                    <p class="product-maker">Maker: <%= product.sm_maker %></p>
                    <a class="product-link" href="/product/<%= product.id %>">View Details</a>
                </div>
            <% }); %>
        </div>
    </div>

    <script>
      function toggleMenu() {
        const menu = document.getElementById('menu');
        menu.classList.toggle('hidden'); // Using the hidden class for toggle
      }
    </script>
</body>
</html>