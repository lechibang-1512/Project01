<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase History</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        th {
            background-color: #f2f2f2;
        }
        .report-button {
            display: block;
            margin: 20px auto;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            cursor: pointer;
            text-align: center;
            border-radius: 5px;
        }

        .report-button:hover{
            background-color: #0056b3;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.4);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 800px;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    </style>
</head>
<body>
<div class="menu-container">
    <button class="hamburger" onclick="toggleMenu()">☰</button>
    <nav id="menu" class="hidden">
        <a href="/homepage">Homepage</a>
        <a href="/products">Products</a>
        <a href="/purchaseHistory">Purchase History</a>
        <a href="/customerInfo">Customer Info</a>
    </nav>
</div>
<div class="container">
    <h1 class="text-center">Purchase History</h1>

    <% if (orders && orders.length > 0) { %>

        <button class="report-button" onclick="openModal()">Generate Sales Report</button>

        <div id="salesReportModal" class="modal">
            <div class="modal-content">
                <span class="close" onclick="closeModal()">×</span>
                <h2>Sales Report</h2>
                <table>
                    <thead>
                    <tr>
                        <th>Metric</th>
                        <th>Value</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Total Lifetime Sales</td>
                        <td><%= totalSales.toFixed(2) %> USD</td>
                    </tr>
                     <tr>
                        <td>Average Sales Per Customer</td>
                        <td><%= avgSalesPerCustomer.toFixed(2) %> USD</td>
                    </tr>
                    <tr>
                        <td>Number of Orders</td>
                       <td><%= numberOfOrders %></td>
                   </tr>
                    <tr>
                        <td>Top Customer</td>
                        <td><%= topCustomer %></td>
                    </tr>
                      <tr>
                          <td>Top 5 Customers</td>
                           <td>
                                  <% if(topCustomers && topCustomers.length > 0){ %>
                                        <ul>
                                          <% topCustomers.forEach(customer => { %>
                                               <li><%= customer.name %>: <%= customer.sales.toFixed(2) %> USD</li>
                                           <% }) %>
                                        </ul>
                                  <% } else {%>
                                         <p>No Data Available</p>
                                  <% } %>
                           </td>
                       </tr>
                    <tr>
                        <td>Top Device</td>
                        <td><%= topDevice %></td>
                    </tr>
                        <tr>
                            <td>Top 5 Devices</td>
                            <td>
                                <% if(topDevices && topDevices.length > 0){ %>
                                      <ul>
                                        <% topDevices.forEach(device => { %>
                                             <li><%= device.name %>: <%= device.sales.toFixed(2) %> USD</li>
                                         <% }) %>
                                      </ul>
                                <% } else {%>
                                    <p>No Data Available</p>
                                <% } %>
                             </td>
                        </tr>
                     </tbody>
                </table>
            </div>
        </div>


        <table>
            <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Phone Model</th>
                <th>Manufacturer</th>
                <th>Sub-brand</th>
                <th>Price (USD)</th>
                <th>Color</th>
                <th>RAM (GB)</th>
                <th>Storage (ROM) (GB)</th>
                <th>Order Date</th>
            </tr>
            </thead>
            <tbody>
            <% orders.forEach(order => { %>
                <tr>
                    <td><%= order.first_name %></td>
                    <td><%= order.last_name %></td>
                    <td><%= order.email %></td>
                    <td><%= order.phone_number %></td>
                    <td><%= order.street_address %></td>
                    <td><%= order.sm_name %></td>
                    <td><%= order.sm_maker %></td>
                    <td><%= order.subbrand %></td>
                    <td><%= order.sm_price %></td>
                    <td><%= order.color %></td>
                    <td><%= order.ram %></td>
                    <td><%= order.rom %></td>
                    <td><%= order.order_date %></td>
                </tr>
            <% }); %>
            </tbody>
        </table>


    <% } else { %>
        <p>No purchase history found.</p>
    <% } %>
    <a class="product-link" href="/">Back to Home</a>
</div>
<script>
    function toggleMenu() {
        const menu = document.getElementById('menu');
        menu.classList.toggle('hidden');
    }
     // Get the modal
    const modal = document.getElementById("salesReportModal");

    // Function to open the modal
    function openModal() {
        modal.style.display = "block";
    }

    // Function to close the modal
    function closeModal() {
        modal.style.display = "none";
    }
    // Close modal when user clicks outside of modal
    window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
     }
   }
</script>
</body>
</html>