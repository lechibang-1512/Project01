<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase History</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="menu-container">
        <button class="hamburger" onclick="toggleMenu()">â˜°</button>
        <nav id="menu" class="hidden">
          <a href="/products">Products</a>
          <a href="/purchaseHistory">Purchase History</a>
          <a href="/customerInfo">Customer Info</a>
        </nav>
    </div>

    <div class="container">
        <h1 class="text-center">Purchase History</h1>
        <% if (orders && orders.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Address</th>
                        <th>Phone Model</th>
                        <th>Manufacturer</th>
                        <th>Sub-brand</th>
                        <th>Price (USD)</th>
                        <th>Color</th>
                        <th>RAM (GB)</th>
                        <th>Storage (ROM) (GB)</th>
                        <th>Order Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.first_name %></td>
                            <td><%= order.last_name %></td>
                            <td><%= order.email %></td>
                            <td><%= order.phone_number %></td>
                            <td><%= order.street_address %></td>
                            <td><%= order.sm_name %></td>
                            <td><%= order.sm_maker %></td>
                            <td><%= order.subbrand %></td>
                            <td><%= order.sm_price %></td>
                            <td><%= order.color %></td>
                            <td><%= order.ram %></td>
                            <td><%= order.rom %></td>
                            <td><%= order.order_date %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No purchase history found.</p>
        <% } %>
        <a class="product-link" href="/">Back to Home</a>
    </div>

    <script>
        function toggleMenu() {
            const menu = document.getElementById('menu');
            menu.classList.toggle('hidden');
        }
    </script>
</body>
</html>
