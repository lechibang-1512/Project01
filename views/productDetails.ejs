<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Details</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="container">
    <div class="button-container">
      <a class="product-link" href="/">Back to All Products</a>

      <form action="/add-to-cart" method="post">
          <input type="hidden" name="productId" value="<%= product.id %>">
          <button class="product-link" type="submit">Add Phone to Cart</button>
      </form>
    </div>
    <h1 class="text-center">Product Details</h1>
    <div class="product-card">
      <h2 class="product-name"><%= product.sm_name %></h2>
      <p class="product-maker">Maker: <%= product.sm_maker %></p>
      <div class="specs-container">
        <div class="specs-header" onclick="toggleSpecs()">Specifications</div>
        <div class="specs-content hidden">
          <table>
            <thead>
              <tr>
                <th>Feature</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Color</td>
                <td><%= product.color %></td>
              </tr>
              <tr>
                <td>Processor</td>
                <td><%= product.processor %></td>
              </tr>
              <tr>
                <td>Memory</td>
                <td><%= product.ram %> RAM, <%= product.rom %> ROM</td>
              </tr>
              <tr>
                <td>Battery Capacity</td>
                <td><%= product.battery_capacity %> mAh</td>
              </tr>
              <tr>
                <td>Water and Dust Rating</td>
                <td><%= product.water_and_dust_rating %></td>
              </tr>
              <tr>
                <td>Sub-brand</td>
                <td><%= product.subbrand %></td>
              </tr>
              <tr>
                <td>Process Node</td>
                <td><%= product.process_node %></td>
              </tr>
              <tr>
                <td>CPU Cores</td>
                <td><%= product.cpu_cores %></td>
              </tr>
              <tr>
                <td>CPU Frequency</td>
                <td><%= product.cpu_frequency %></td>
              </tr>
              <tr>
                <td>GPU</td>
                <td><%= product.gpu %></td>
              </tr>
              <tr>
                <td>Memory Type</td>
                <td><%= product.memory_type %></td>
              </tr>
              <tr>
                <td>Expandable Memory</td>
                <td><%= product.expandable_memory %></td>
              </tr>
              <tr>
                <td>Length (mm)</td>
                <td><%= product.length_mm %></td>
              </tr>
              <tr>
                <td>Width (mm)</td>
                <td><%= product.width_mm %></td>
              </tr>
              <tr>
                <td>Thickness (mm)</td>
                <td><%= product.thickness_mm %></td>
              </tr>
              <tr>
                <td>Weight (g)</td>
                <td><%= product.weight_g %></td>
              </tr>
              <tr>
                <td>Display Size</td>
                <td><%= product.display_size %></td>
              </tr>
              <tr>
                <td>Resolution</td>
                <td><%= product.resolution %></td>
              </tr>
              <tr>
                <td>Pixel Density</td>
                <td><%= product.pixel_density %></td>
              </tr>
              <tr>
                <td>Refresh Rate</td>
                <td><%= product.refresh_rate %></td>
              </tr>
              <tr>
                <td>Brightness</td>
                <td><%= product.brightness %></td>
              </tr>
              <tr>
                <td>Display Features</td>
                <td><%= product.display_features %></td>
              </tr>
              <tr>
                <td>Rear Camera Main</td>
                <td><%= product.rear_camera_main %></td>
              </tr>
              <tr>
                <td>Rear Camera Macro</td>
                <td><%= product.rear_camera_macro %></td>
              </tr>
              <tr>
                <td>Rear Camera Features</td>
                <td><%= product.rear_camera_features %></td>
              </tr>
              <tr>
                <td>Rear Video Resolution</td>
                <td><%= product.rear_video_resolution %></td>
              </tr>
              <tr>
                <td>Front Camera</td>
                <td><%= product.front_camera %></td>
              </tr>
              <tr>
                <td>Front Camera Features</td>
                <td><%= product.front_camera_features %></td>
              </tr>
              <tr>
                <td>Front Video Resolution</td>
                <td><%= product.front_video_resolution %></td>
              </tr>
              <tr>
                <td>Fast Charging</td>
                <td><%= product.fast_charging %></td>
              </tr>
              <tr>
                <td>Connector</td>
                <td><%= product.connector %></td>
              </tr>
              <tr>
                <td>Security Features</td>
                <td><%= product.security_features %></td>
              </tr>
              <tr>
                <td>SIM Card</td>
                <td><%= product.sim_card %></td>
              </tr>
              <tr>
                <td>NFC</td>
                <td><%= product.nfc %></td>
              </tr>
              <tr>
                <td>Network Bands</td>
                <td><%= product.network_bands %></td>
              </tr>
              <tr>
                <td>Wireless Connectivity</td>
                <td><%= product.wireless_connectivity %></td>
              </tr>
              <tr>
                <td>Navigation</td>
                <td><%= product.navigation %></td>
              </tr>
              <tr>
                <td>Audio Jack</td>
                <td><%= product.audio_jack %></td>
              </tr>
              <tr>
                <td>Audio Playback</td>
                <td><%= product.audio_playback %></td>
              </tr>
              <tr>
                <td>Video Playback</td>
                <td><%= product.video_playback %></td>
              </tr>
              <tr>
                <td>Sensors</td>
                <td><%= product.sensors %></td>
              </tr>
              <tr>
                <td>Operating System</td>
                <td><%= product.operating_system %></td>
              </tr>
              <tr>
                <td>Package Contents</td>
                <td><%= product.package_contents %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <script>
    function toggleSpecs() {
      const specsContent = document.querySelector('.specs-content');
      specsContent.classList.toggle('hidden');
    }
  </script>
</body>
</html>